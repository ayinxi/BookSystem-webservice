    <select id="getAllUser" resultType="booksystem.pojo.User">
        select * from user
    </select>

    <select id="getUserByName" parameterType="String" resultType="booksystem.pojo.User">
        select * from user where username=#{username}
     </select>

    <select id="addUser" parameterType="booksystem.pojo.User" resultType="booksystem.pojo.User">
        update
    </select>

    <update id="updateUser"  parameterType="booksystem.pojo.User" resultType="int">
        update user set
        password=#{password},
        name=#{name},
        avatar_b=#{avatar_b}
        where user_id=#{user_id} ADD username=#{username}
    </update>

    <update id="deleteUser" parameterType="String">
        update student set
            is_valid = '0'
        where student_id=#{studentId} and is_valid=1
    </update>

