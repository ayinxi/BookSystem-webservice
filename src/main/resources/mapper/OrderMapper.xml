<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="booksystem.dao.OrderDao">
    <insert id="addOrder">
        INSERT INTO `order`(id,total,status,address_id,shop_id,user_id,create_time,update_time)
        VALUES(#{id},#{total},#{status},#{address_id},#{shop_id},#{user_id},now(),now());
    </insert>

