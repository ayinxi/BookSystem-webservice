<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="booksystem.dao.OrderDao">

    <insert id="addOrder">
        INSERT INTO `order`(id,total,status,address_id,shop_id,user_id,create_time,update_time)
        VALUES(#{id},#{total},#{status},#{address_id},#{shop_id},#{user_id},now(),now());
    </insert>

    <select id="getAllOrderByUser" resultType="String">
        select id from `order` where user_id=(select id from user where username=#{username}) order by create_time desc
    </select>

    <select id="getAllOrderByShop" resultType="String">
        select id from `order` where shop_id=#{shop_id} order by create_time desc
    </select>

    <update id="updateStatus" parameterType="int">
        update `order` set status=#{status} where order_id=#{order_id}
    </update>

</mapper>